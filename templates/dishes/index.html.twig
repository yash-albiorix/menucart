{% extends 'base.html.twig' %}

{# {% block title %}{% endblock %} #}

{% block body %}

{% for messages in app.flashes('success') %}

    <div class="alert alert-success">
        <h3>{{ messages }}</h3>
    </div>

{% endfor %}

<div class="container">

<table class="table table-striped">
    <thead>
        <tr>
            <td>Order No.</td>
            <td>Name</td>
            <td>Description</td>
             <td>Price</td>
             <td>Category</td>
            <td>Action</td>
            <td> <a href="{{path('dish.create')}}">Create</a></td>
        </tr>
    </thead>
    <tbody>
        {% for dish in getDishes %}
            <tr>
                <td>{{dish.id}}</td>
                <td> <a href="{{path('dish.show', {id: dish.id})}}">{{dish.name}}</a></td>
                <td>{{dish.description}}</td>
                <td>{{dish.price}}</td>
                <td>{{dish.category}}</td>
                <td> <a href="{{path('dish.update', {id: dish.id})}}">Edit</a> |  <a href="{{path('dish.remove', {id: dish.id})}}">Delete</a></td>
                <td></td>
            </tr>
        {% endfor %}
    </tbody>
</table>

</div>
{% endblock %}
